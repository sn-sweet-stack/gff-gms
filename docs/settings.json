{
  "openapi": "3.0.0",
  "info": {
    "title": "Settings API",
    "version": "1.0.0",
    "description": "API endpoints for managing application settings"
  },
  "paths": {
    "/api/settings/google-oauth-token": {
      "post": {
        "summary": "Save Google OAuth tokens",
        "tags": ["Settings"],
        "security": [
          {
            "sanctum": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "access_token",
                  "refresh_token",
                  "expires_in",
                  "scope",
                  "token_type"
                ],
                "properties": {
                  "access_token": {
                    "type": "string",
                    "example": "ya29.a0AfB_..."
                  },
                  "refresh_token": {
                    "type": "string",
                    "example": "1//04u..."
                  },
                  "expires_in": {
                    "type": "integer",
                    "example": 3599
                  },
                  "scope": {
                    "type": "string",
                    "example": "https://www.googleapis.com/auth/drive.file"
                  },
                  "token_type": {
                    "type": "string",
                    "example": "Bearer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Tokens saved successfully"
          },
          "401": {
            "description": "Unauthenticated"
          },
          "422": {
            "description": "Validation failed"
          }
        }
      }
    },
    "/api/settings/google-drive-status": {
      "get": {
        "summary": "Get Google Drive connection status",
        "tags": ["Settings"],
        "security": [
          {
            "sanctum": []
          }
        ],
        "responses": {
          "200": {
            "description": "Current Google Drive connection status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["not_connected", "connected", "expired"],
                      "example": "connected"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthenticated"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "sanctum": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
