{
  "openapi": "3.0.0",
  "info": {
    "title": "Applicants API",
    "version": "1.0.0",
    "description": "API endpoints for managing applicants"
  },
  "paths": {
    "/api/applicants": {
      "get": {
        "summary": "List all applicants",
        "tags": ["Applicants"],
        "security": [
          {
            "sanctum": []
          }
        ],
        "parameters": [
          {
            "name": "only_with_submitted",
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "description": "Filter to only show applicants with submitted applications"
          },
          {
            "name": "only_with_accepted",
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "description": "Filter to only show applicants with accepted applications"
          }
        ],
        "responses": {
          "200": {
            "description": "List of applicants",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Applicant"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthenticated"
          },
          "403": {
            "description": "Unauthorized - Missing required permissions"
          }
        }
      }
    },
    "/api/applicants/{id}": {
      "get": {
        "summary": "Get a specific applicant",
        "tags": ["Applicants"],
        "security": [
          {
            "sanctum": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The applicant ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Applicant details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Applicant"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthenticated"
          },
          "403": {
            "description": "Unauthorized - Missing required permissions"
          },
          "404": {
            "description": "Applicant not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Applicant": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "gff_id": {
            "type": "string",
            "example": "GFF123456"
          },
          "organization_name": {
            "type": "string",
            "example": "Example Organization"
          },
          "organization_phone_country_code": {
            "type": "string",
            "example": "+1"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "title": {
            "type": "string",
            "example": "Director"
          },
          "phone_number": {
            "type": "string",
            "example": "555-0123"
          },
          "phone_country_code": {
            "type": "string",
            "example": "+1"
          },
          "additional_phones": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["555-0124", "555-0125"]
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "additional_emails": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            },
            "example": ["secondary@example.com"]
          },
          "website": {
            "type": "string",
            "format": "uri",
            "example": "https://www.example.com"
          },
          "mailing_address": {
            "type": "object",
            "example": {
              "street": "123 Main St",
              "city": "Anytown",
              "state": "ST",
              "zip": "12345",
              "country": "United States"
            }
          },
          "address_of_operations": {
            "type": "object",
            "example": {
              "street": "456 Business Ave",
              "city": "Anytown",
              "state": "ST",
              "zip": "12345",
              "country": "United States"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "sanctum": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
