{
  "openapi": "3.0.0",
  "info": {
    "title": "Applications API",
    "version": "1.0.0",
    "description": "API endpoints for retrieving application information"
  },
  "paths": {
    "/api/applications": {
      "get": {
        "tags": ["Applications"],
        "summary": "List applications",
        "description": "Retrieves a list of applications with optional filtering by year and applicant ID",
        "security": [
          {
            "sanctum": []
          }
        ],
        "parameters": [
          {
            "name": "year",
            "in": "query",
            "required": false,
            "description": "Filter applications by year",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "applicant_id",
            "in": "query",
            "required": false,
            "description": "Filter applications by applicant ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "Application ID"
                          },
                          "type": {
                            "type": "string",
                            "description": "Application type"
                          },
                          "year": {
                            "type": "integer",
                            "description": "Application year"
                          },
                          "status": {
                            "type": "string",
                            "description": "Current application status"
                          },
                          "payload": {
                            "type": "object",
                            "description": "Application form data"
                          },
                          "admin_expense_details": {
                            "type": "object",
                            "description": "Administrative expense details"
                          },
                          "banking_credential": {
                            "type": "object",
                            "description": "Banking credential information"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthenticated"
          }
        }
      }
    },
    "/api/applications/{application}/donors": {
      "patch": {
        "tags": ["Applications"],
        "summary": "Update donors exemption status",
        "description": "Updates the exemption status for major donors and sets application status to accepted",
        "security": [
          {
            "sanctum": []
          }
        ],
        "parameters": [
          {
            "name": "application",
            "in": "path",
            "required": true,
            "description": "Application ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["donors"],
                "properties": {
                  "donors": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["year", "major_donors"],
                      "properties": {
                        "year": {
                          "type": "integer",
                          "minimum": 2000,
                          "maximum": 2100,
                          "description": "Financial year"
                        },
                        "major_donors": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": ["name", "amount", "exempted"],
                            "properties": {
                              "name": {
                                "type": "string",
                                "description": "Donor name"
                              },
                              "amount": {
                                "type": "number",
                                "minimum": 0,
                                "description": "Donation amount"
                              },
                              "exempted": {
                                "type": "boolean",
                                "description": "Whether the donor is exempted"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              },
              "example": {
                "donors": [
                  {
                    "year": 2024,
                    "major_donors": [
                      {
                        "name": "Big donor 1",
                        "amount": 1000,
                        "exempted": false
                      },
                      {
                        "name": "Big donor 2",
                        "amount": 7000,
                        "exempted": true
                      }
                    ]
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "description": "Revision ID"
                        },
                        "author_name": {
                          "type": "string",
                          "description": "Name of the revision author (user name or organization name)"
                        },
                        "change_type": {
                          "type": "string",
                          "description": "Type of changes made in this revision"
                        },
                        "changed_fields": {
                          "type": "object",
                          "description": "Fields that were changed in this revision"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date-time",
                          "description": "Timestamp when the revision was created"
                        },
                        "documents": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer",
                                "description": "Document ID"
                              },
                              "type": {
                                "type": "string",
                                "description": "Document type"
                              },
                              "file_name": {
                                "type": "string",
                                "description": "Original file name"
                              },
                              "mime_type": {
                                "type": "string",
                                "description": "File MIME type"
                              },
                              "size": {
                                "type": "integer",
                                "description": "File size in bytes"
                              },
                              "human_readable_size": {
                                "type": "string",
                                "description": "Human readable file size"
                              },
                              "url": {
                                "type": "string",
                                "description": "URL to download the file"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthenticated"
          },
          "403": {
            "description": "Unauthorized - User doesn't have permission to update application status"
          },
          "404": {
            "description": "Application not found"
          },
          "422": {
            "description": "Validation failed"
          }
        }
      }
    },
    "/api/applications/{application}/status": {
      "patch": {
        "tags": ["Applications"],
        "summary": "Update application status",
        "description": "Updates the status of an application and creates a new revision with copied documents",
        "security": [
          {
            "sanctum": []
          }
        ],
        "parameters": [
          {
            "name": "application",
            "in": "path",
            "required": true,
            "description": "Application ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": {
                  "status": {
                    "type": "string",
                    "description": "New status for the application",
                    "enum": ["pending", "submitted", "approved", "rejected", "needs_resubmitting"]
                  },
                  "notes": {
                    "type": "string",
                    "description": "Optional notes about the status change",
                    "maxLength": 65535
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "description": "Revision ID"
                        },
                        "author_name": {
                          "type": "string",
                          "description": "Name of the revision author (user name or organization name)"
                        },
                        "change_type": {
                          "type": "string",
                          "description": "Type of changes made in this revision"
                        },
                        "changed_fields": {
                          "type": "object",
                          "description": "Fields that were changed in this revision"
                        },
                        "status_notes": {
                          "type": "string",
                          "description": "Notes about the status change"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date-time",
                          "description": "Timestamp when the revision was created"
                        },
                        "documents": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer",
                                "description": "Document ID"
                              },
                              "type": {
                                "type": "string",
                                "description": "Document type"
                              },
                              "file_name": {
                                "type": "string",
                                "description": "Original file name"
                              },
                              "mime_type": {
                                "type": "string",
                                "description": "File MIME type"
                              },
                              "size": {
                                "type": "integer",
                                "description": "File size in bytes"
                              },
                              "human_readable_size": {
                                "type": "string",
                                "description": "Human readable file size"
                              },
                              "url": {
                                "type": "string",
                                "description": "URL to download the file"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthenticated"
          },
          "403": {
            "description": "Unauthorized - User doesn't have permission to update application status"
          },
          "404": {
            "description": "Application not found"
          },
          "422": {
            "description": "Validation failed"
          }
        }
      }
    },
